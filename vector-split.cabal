  exposed-modules:     Data.Vector.Split
                     , Data.Vector.Split.Internal
  build-depends:       base     >= 4    && < 5
                     , vector   >= 0.10 && < 0.12
  default-language:    Haskell2010
  ghc-options:         -Wall

